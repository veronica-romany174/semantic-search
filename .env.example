# ── Application ───────────────────────────────────────────────────────────────
APP_NAME="PDF Ingestor & Semantic Search API"
APP_VERSION="1.0.0"
DEBUG=false

# ── Vector store (ChromaDB) ───────────────────────────────────────────────────
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION=documents

# ── Embedder ──────────────────────────────────────────────────────────────────
EMBEDDING_MODEL=all-MiniLM-L6-v2
# Optional: HuggingFace token — removes unauthenticated download rate-limit warnings.
# Get a free token at https://huggingface.co/settings/tokens
# HF_TOKEN=hf_...

# ── Chunker ───────────────────────────────────────────────────────────────────
CHUNK_SIZE=1000
CHUNK_OVERLAP=150

# ── Search ────────────────────────────────────────────────────────────────────
SEARCH_TOP_K=5
